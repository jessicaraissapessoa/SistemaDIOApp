<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/cinza">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/preto"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="48dp">

            <ImageView
                android:id="@+id/ic_logo_dio"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/ic_logo_dio"
                android:contentDescription="@string/descricao_ic_logo_dio"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exibicao_usuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginVertical="24dp"
                android:padding="16dp"
                app:icon="@drawable/ic_usuario"
                app:iconSize="32dp"
                app:iconTint="@color/branco"
                android:textStyle="bold"
                android:textColor="@color/branco"
                android:text="@string/btn_usuarios"
                app:layout_constraintTop_toBottomOf="@id/ic_logo_dio"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exibicao_conteudos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginVertical="24dp"
                android:padding="16dp"
                app:icon="@drawable/ic_conteudo"
                app:iconSize="32dp"
                app:iconTint="@color/branco"
                android:textStyle="bold"
                android:textColor="@color/branco"
                android:text="@string/btn_conteudos_educacionais"
                app:layout_constraintTop_toBottomOf="@id/btn_exibicao_usuarios"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exibicao_formacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginVertical="24dp"
                android:padding="16dp"
                app:icon="@drawable/ic_formacao"
                app:iconSize="32dp"
                app:iconTint="@color/branco"
                android:textStyle="bold"
                android:textColor="@color/branco"
                android:text="@string/btn_formacoes"
                app:layout_constraintTop_toBottomOf="@id/btn_exibicao_conteudos"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>